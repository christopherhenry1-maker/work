// Helper component for the bar chart rows
const HeadcountBar = ({ label, value, max }) => {
  const widthPercentage = (value / max) * 100;
  
  return (
    <div className="flex items-center group">
      <div className="w-20 font-bold text-sm text-gray-800 shrink-0">{label}</div>
      <div className="flex-grow h-8 bg-gray-100 rounded-sm relative overflow-hidden flex items-center">
        <div 
          className="h-full bg-gradient-to-r from-[#cd040b] to-[#ff4d4d] rounded-sm shadow-sm transition-all duration-500 ease-out"
          style={{ width: `${widthPercentage}%` }}
        ></div>
        {/* Value displayed inside the bar if it's wide enough, otherwise outside could be an option, 
            but strictly following the image style, the number is often at the end or white text inside.
            We'll put it at the end of the bar inside white for high contrast or just outside. 
            The image shows white text inside the red bar usually. */}
        <span className="absolute right-2 text-xs font-bold text-gray-500">{value}</span>
      </div>
    </div>
  );
};

export default HeadcountDashboard;
